<% layout("/layouts/bolierplate") %> 
<style>
  #filters {
    display:flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor:pointer;
  }

  .filter p {
    font-size: 0.8rem;
    position: relative; /* so we can position the underline */
    display: inline-block; /* keeps the underline only as wide as the text */
  }

  .filter p::after {
    content: "";
    position: absolute;
    bottom: -3px; /* little below the text */
    left: 0;
    width: 0;
    height: 2px;
    background: black;
    transition: width 0.3s ease;
  }

  .filter:hover p::after {
    width: 100%; /* animate underline on hover */
  }

  .filter i {
    font-size: 1.2rem;
    margin-bottom: 0.25rem; /* space between icon and text */
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left:0.5rem;
    display: flex;
    align-items: center;
  }

  /* Added heart favorite styles */
  .listing-card {
    position: relative;
  }
  .favorite-heart {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 1.8rem;
    color: grey;
    cursor: pointer;
    user-select: none;
    transition: color 0.3s ease;
    z-index: 10;

    /* Thin white border around heart */
    -webkit-text-stroke: 1px white; /* Safari/Chrome */
    text-stroke: 1px white; /* Standard */
  }
  .favorite-heart.red {
    color: red;
    -webkit-text-stroke: 1px white;
    text-stroke: 1px white;
  }

</style>

<div id="filters">
  <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-house-chimney"></i></div>
      <p>Castles</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
  </div>
  <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
       <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
       <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
  <% for(let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
          <!-- Heart icon added -->
          <div class="favorite-heart">&#10084;</div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %> <br /></b> 
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });

  // Heart toggle logic
  document.querySelectorAll('.favorite-heart').forEach(heart => {
    heart.addEventListener('click', (e) => {
      e.preventDefault(); // Prevent link navigation if needed
      heart.classList.toggle('red');
    });
  });
</script>
